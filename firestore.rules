rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to manufacturers/factories
    match /factories/{factory} {
      allow read: if true;  // Public read access for homepage
      allow write: if request.auth != null;  // Only authenticated users can write
    }

    // User profiles - only owner can read/write
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User products - only owner can read/write
    match /products/{productId} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // User integrations - only owner can read/write
    match /integrations/{integrationId} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
